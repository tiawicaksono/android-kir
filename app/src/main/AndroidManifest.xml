<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kirsurabaya.myapplication">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.camera.flash" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_kir"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- android:theme="@style/Theme.AppCompat.Light.NoActionBar" -->
        <activity
            android:name="kirsurabaya.myapplication.SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="kirsurabaya.myapplication.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme" />
        <activity android:name="kirsurabaya.myapplication.PersyaratanDetailActivity" />
        <activity android:name="kirsurabaya.myapplication.HomeCekKendaraanActivity" />
        <activity android:name="kirsurabaya.myapplication.HomeHasilActivity" />
        <activity android:name="kirsurabaya.myapplication.HomeRekomActivity" />
        <activity android:name="kirsurabaya.myapplication.HomeKendaraanUjiActivity" />
        <activity android:name="kirsurabaya.myapplication.HomeQrCodeSmartCardActivity" />
        <activity
            android:name="kirsurabaya.myapplication.MyIntro"
            android:theme="@style/FullScreenTheme" />
        <activity
            android:name="kirsurabaya.myapplication.PotraitCaptureActivity"
            android:screenOrientation="portrait" />
        <activity android:name="kirsurabaya.myapplication.HomeRiwayatKendaraanActivity" />
        <activity android:name="kirsurabaya.myapplication.HomeRetribusiActivity"></activity>
    </application>

</manifest>